<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0"
       xsi:schemaLocation="
       http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0 http://aries.apache.org/schemas/blueprint-cm/blueprint-cm-1.1.0.xsd
       http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd">

    <!-- OSGI blueprint property placeholder -->
    <cm:property-placeholder id="properties" persistent-id="org.trellisldp.amqp" update-strategy="reload">
      <cm:default-properties>
        <cm:property name="amqp.brokerUrl" value="amqp://localhost:5672"/>
        <cm:property name="amqp.username" value="guest"/>
        <cm:property name="amqp.password" value="guest"/>
        <cm:property name="amqp.routingkey" value="trellis"/>
        <cm:property name="amqp.exchangename" value="ldp"/>
      </cm:default-properties>
    </cm:property-placeholder>

		<!-- configuration of activemq component -->
    <bean id="connectionFactory" class="com.rabbitmq.client.ConnectionFactory">
			<property name="uri" value="${amqp.brokerUrl}"/>
			<property name="username" value="${amqp.username}"/>
			<property name="password" value="${amqp.password}"/>
		</bean>

    <bean id="connection" factory-ref="connectionFactory" factory-method="newConnection"/>

    <bean id="amqpPublisher" class="org.trellisldp.amqp.AmqpPublisher">
      <argument ref="connection"/>
      <argument value="${amqp.exchangename}"/>
      <argument value="${amqp.routingkey}"/>
    </bean>

    <service ref="amqpPublisher" interface="org.trellisldp.api.EventService" ranking="10">
      <service-properties>
        <entry key="osgi.jndi.service.name" value="trellis/Amqp"/>
      </service-properties>
    </service>

</blueprint>
